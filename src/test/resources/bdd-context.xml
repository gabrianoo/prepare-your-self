<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans.xsd
           http://www.springframework.org/schema/context
           http://www.springframework.org/schema/context/spring-context.xsd">

    <context:component-scan base-package="com.learn">
        <context:exclude-filter type="regex" expression="com\.learn\.service\..*"/>
        <context:exclude-filter type="regex" expression="com\.learn\.configuration\..*"/>
    </context:component-scan>

    <!-- Mocked Services -->
    <bean id="mediaService" class="org.mockito.Mockito" factory-method="mock">
        <constructor-arg value="com.learn.service.media.MediaService"/>
    </bean>
    <bean id="userService" class="org.mockito.Mockito" factory-method="mock">
        <constructor-arg value="com.learn.service.user.UserService"/>
    </bean>

</beans>